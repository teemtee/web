{% extends '_base.html.j2' %}

{% block title %}Test and Plan Information{% endblock %}

{% block content %}
{# Test Section #}
<section>
  <h1>{{ test.name }}</h1>

  <div class="metadata">
    {% if test.summary %}
    <p><strong>Summary:</strong> {{ test.summary }}</p>
    {% endif %}
    {% if test.description %}
    <p><strong>Description:</strong> {{ test.description }}</p>
    {% endif %}
    {% if test.tier %}
    <p><strong>Tier:</strong> {{ test.tier }}</p>
    {% endif %}
    {% if test.ref %}
    <p><strong>Reference:</strong> {{ test.ref }}</p>
    {% endif %}
    {% if test.path %}
    <p><strong>Path:</strong> {{ test.path }}</p>
    {% endif %}
    {% if test.id %}
    <p><strong>ID:</strong> {{ test.id }}</p>
    {% endif %}
    {% if test.fmf_id %}
      {% if test.fmf_id.url %}
      <p><strong>URL:</strong> <a href="{{ test.fmf_id.url }}">{{ test.fmf_id.url }}</a></p>
      {% endif %}
      {% if test.fmf_id.ref %}
      <p><strong>Reference:</strong> {{ test.fmf_id.ref }}</p>
      {% endif %}
      {# fmf_id.name is redundant since it's already in the heading #}
      {% if test.fmf_id.path %}
      <p><strong>Path:</strong> {{ test.fmf_id.path }}</p>
      {% endif %}
    {% endif %}
    {% if test.contact %}
    <p><strong>Contacts:</strong></p>
    <ul class="contact-list">
    {% for contact in test.contact %}
      <li>{{ contact }}</li>
    {% endfor %}
    </ul>
    {% endif %}
    {% if test.tag %}
    <p><strong>Tags:</strong></p>
    <div class="tag-list">
    {% for tag in test.tag %}
      <span class="tag">{{ tag }}</span>
    {% endfor %}
    </div>
    {% endif %}
  </div>
</section>

